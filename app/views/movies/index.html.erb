<h1>映画一覧</h1>
<%= search_form_for @q, url: search_movies_path do |f| %>
  <%= f.radio_button :is_showing_eq, '1' %>公開中
  <%= f.radio_button :is_showing_eq, '0' %>公開予定
  <%= f.submit '検索' %>
<% end %>
<%= form_with local: true, method: :get do |f| %>
  <%= f.text_field :keyword %>
  <%= f.submit '検索' %>
<% end %>

<table>
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>画像URL</th>
    <th>公開年</th>
    <th>上映中</th>
    <th>概要</th>
    <th>詳細</th>
  <% @movies.each do |movie| %>
  <tr>
    <td><%= movie.id %></td>
    <td><%= movie.name %></td>
    <td><%= image_tag("#{movie.image_url}") %></td>
    <td><%= "#{movie.year}年公開" %></td>
    <td><%= movie.is_showing ? "上映中" : "公開予定" %></td>
    <td><%= movie.description %></td>
    <td>
      <%= link_to "詳細", movie_path(movie) %>
    </td>
  </tr>
  <% end %>
</table>
