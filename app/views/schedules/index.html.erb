<h1><%= "#{@theater.name} 映画館のスケジュール一覧" %></h1>

<div>
  <%= @movie.name %>
</div>
<div>
  <%= image_tag("#{@movie.image_url}") %>
</div>
<div>
  <%= "#{@movie.year}年公開" %>
</div>
<div>
  <%= @movie.description %>
</div>

<table>
  <tr>
    <th>スケジュールID</th>
    <th>作品ID</th>
    <th>上映開始時間</th>
    <th>上映終了時間</th>
    <th>予約</th>
  </tr>
  <% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.id %></td>
    <td><%= schedule.movie_id %></td>
    <td><%= schedule.start_time %></td>
    <td><%= schedule.end_time %></td>
    <td>
      <%= link_to "座席を予約する", movie_theater_schedule_reservation_path(@movie, @theater, schedule.id) %>
    </td>
  </tr>
  <% end %>
</table>

