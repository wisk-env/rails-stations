<h1>編集画面</h1>
<%= flash[:alert] %>

<%= form_with model: @movie, url: admin_movie_path, local: true do |f| %>
  <div>
    <%= f.label :name, "タイトル" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :year, "公開年" %>
    <%= f.number_field :year %>
  </div>
  <div>
    <%= f.label :description, "概要" %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :image_url, "画像URL" %>
    <%= f.text_field :image_url %>
  </div>
  <div>
    <%= f.label :is_showing, "上映中" %>
    <%= f.check_box :is_showing %>
  </div>
  <%= f.submit "更新" %>
  <%= button_to "削除", admin_movie_path(@movie), method: :delete, data: { confirm: "#{@movie.name} を削除しますか？" } %>
<% end %>
