<h1>管理画面</h1>
<table>
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>公開年</th>
    <th>概要</th>
    <th>画像URL</th>
    <th>上映中</th>
    <th>登録日時</th>
    <th>更新日時</th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td>
        <%= link_to "#{movie.id}", edit_admin_movie_path(movie) %>
      </td>
      <td>
        <%= movie.name %>
      </td>
      <td>
        <%= movie.year %>
      </td>
      <td>
        <%= movie.description %>
      </td>
      <td>
        <%= image_tag("#{movie.image_url}") %>
      </td>
      <td>
        <%= movie.is_showing ? "上映中" : "上映予定" %>
      </td>
      <td>
        <%= movie.created_at %>
      </td>
      <td>
        <%= movie.updated_at %>
      </td>
    </tr>
  <% end %>
</table>
